{% extends 'base.html.twig' %}
{% block title %}Panel admina{% endblock %}

{% block body %}
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card p-3">
                <div class="muted">UÅ¼ytkownicy</div>
                <div class="display-6">{{ users|length }}</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <div class="muted">Auta</div>
                <div class="display-6">{{ cars|length }}</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3">
                <div class="muted">Rezerwacje</div>
                <div class="display-6">{{ reservations|length }}</div>
            </div>
        </div>
    </div>

    <div class="card p-3 mt-4">
        <h5>Ostatnie rezerwacje</h5>
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead class="table-light">
                <tr>
                    <th>Auto</th>
                    <th>Najemca</th>
                    <th>Od</th>
                    <th>Do</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for r in reservations|slice(0,10) %}
                    <tr>
                        <td>{{ r.car.brand }} {{ r.car.model }}</td>
                        <td>{{ r.user.email }}</td>
                        <td>{{ r.startDate|date('Y-m-d') }}</td>
                        <td>{{ r.endDate|date('Y-m-d') }}</td>
                        <td>
              <span class="badge {{ r.status == 'accepted' ? 'bg-success' : (r.status == 'pending' ? 'bg-warning text-dark' : (r.status == 'completed' ? 'bg-secondary' : 'bg-danger')) }}">
                {{ r.status }}
              </span>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-center muted">Brak danych</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
