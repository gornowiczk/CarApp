{% extends 'base.html.twig' %}
{% block title %}Dodaj samochód{% endblock %}

{% block body %}
    <style>
        .shell{max-width:900px;margin:auto}
        .cardx{border:none;border-radius:18px;box-shadow:0 10px 28px rgba(15,23,42,.08)}
        .hd{font-weight:800;letter-spacing:.2px}
        .muted{color:#64748b}
        .btn-cta{border-radius:12px;font-weight:600}
    </style>

    <div class="container my-4 shell">
        <div class="card cardx">
            <div class="card-body p-4">
                <h1 class="hd mb-1">➕ Dodaj samochód</h1>
                <div class="muted mb-3">Uzupełnij dane i dodaj zdjęcia.</div>

                {% if form.vars.errors|length %}
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            {% for error in form.vars.errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row g-3">
                    <div class="col-md-6">{{ form_row(form.brand) }}</div>
                    <div class="col-md-6">{{ form_row(form.model) }}</div>
                    <div class="col-md-4">{{ form_row(form.year) }}</div>
                    <div class="col-md-8">{{ form_row(form.registrationNumber) }}</div>
                    <div class="col-md-4">{{ form_row(form.pricePerDay) }}</div>
                    <div class="col-md-8">{{ form_row(form.location) }}</div>
                    <div class="col-12">{{ form_row(form.isAvailable) }}</div>
                    <div class="col-md-6">{{ form_row(form.mainImage) }}</div>
                    <div class="col-md-6">{{ form_row(form.gallery) }}</div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button class="btn btn-primary btn-cta">Zapisz</button>
                    <a href="{{ path('app_my_cars') }}" class="btn btn-outline-secondary btn-cta">Anuluj</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
