{% extends 'base.html.twig' %}
{% block title %}Auta do wynajÄ™cia{% endblock %}

{% block body %}
    <div class="row g-4">
        <div class="col-lg-3">
            <div class="card p-3">
                <h5 class="mb-3">ðŸ”Ž Filtry</h5>
                <form method="get" action="{{ path('app_car_list') }}">
                    <div class="mb-2">
                        <label class="form-label">Marka</label>
                        <input class="form-control" type="text" name="brand" value="{{ filters.brand }}">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Model</label>
                        <input class="form-control" type="text" name="model" value="{{ filters.model }}">
                    </div>
                    <div class="row">
                        <div class="col-6 mb-2">
                            <label class="form-label">Rok od</label>
                            <input class="form-control" type="number" name="yearFrom" value="{{ filters.yearFrom }}">
                        </div>
                        <div class="col-6 mb-2">
                            <label class="form-label">Rok do</label>
                            <input class="form-control" type="number" name="yearTo" value="{{ filters.yearTo }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-2">
                            <label class="form-label">Cena min</label>
                            <input class="form-control" type="number" step="0.01" name="priceMin" value="{{ filters.priceMin }}">
                        </div>
                        <div class="col-6 mb-2">
                            <label class="form-label">Cena max</label>
                            <input class="form-control" type="number" step="0.01" name="priceMax" value="{{ filters.priceMax }}">
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Lokalizacja</label>
                        <input class="form-control" type="text" name="location" value="{{ filters.location }}">
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="isAvailable" name="isAvailable" value="1" {% if filters.isAvailable %}checked{% endif %}>
                        <label class="form-check-label" for="isAvailable">Tylko dostÄ™pne</label>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary w-100">Zastosuj</button>
                        <a class="btn btn-outline-secondary w-100" href="{{ path('app_car_list') }}">WyczyÅ›Ä‡</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-9">
            {% if cars is empty %}
                <div class="alert alert-info">Brak aut speÅ‚niajÄ…cych kryteria.</div>
            {% else %}
                <div class="row g-4">
                    {% for car in cars %}
                        <div class="col-md-6 col-12">
                            <div class="card h-100">

                                {# miniatura: mainImage -> images -> gallery (z katalogu uploads/cars) #}
                                {% set thumb = null %}
                                {% if car.mainImage %}
                                    {% set thumb = asset('uploads/cars/' ~ car.mainImage) %}
                                {% elseif car.images is defined and car.images|length > 0 %}
                                    {% set thumb = asset('uploads/cars/' ~ ((car.images|first).path)) %}
                                {% elseif car.gallery is iterable and car.gallery|length > 0 %}
                                    {% set thumb = asset('uploads/cars/' ~ (car.gallery|first)) %}
                                {% endif %}

                                {% if thumb %}
                                    <img class="card-img-top" src="{{ thumb }}" alt="ZdjÄ™cie {{ car.brand }} {{ car.model }}">
                                {% else %}
                                    <div class="card-img-top d-flex align-items-center justify-content-center"
                                         style="height:180px;background:#f4f6f9;border-bottom:1px solid #e6ebf0;">
                                        <span class="text-muted">Brak zdjÄ™cia</span>
                                    </div>
                                {% endif %}

                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title m-0">{{ car.brand }} {{ car.model }}</h5>
                                        <span class="badge {{ car.isAvailable ? 'bg-success' : 'bg-secondary' }} badge-pill">
                                            {{ car.isAvailable ? 'DostÄ™pny' : 'NiedostÄ™pny' }}
                                        </span>
                                    </div>
                                    <div class="muted small mb-2">Rok: {{ car.year }} â€¢ Rej: {{ car.registrationNumber }}</div>
                                    <div class="mb-3"><strong>{{ car.pricePerDay }} zÅ‚</strong> / doba</div>
                                    <div class="mt-auto d-flex gap-2">
                                        <a href="{{ path('app_car_details', {'id': car.id}) }}" class="btn btn-outline-primary w-100">SzczegÃ³Å‚y</a>
                                        {% if app.user %}

                                        {% endif %}
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
