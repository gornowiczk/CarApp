{# wstaw to do navbaru: {{ render(path('app_notifications_widget')) }} #}
<div class="dropdown me-2">
    <a class="btn btn-outline-secondary position-relative" href="#" data-bs-toggle="dropdown">
        üîî
        {% if unread > 0 %}
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">{{ unread }}</span>
        {% endif %}
    </a>
    <div class="dropdown-menu dropdown-menu-end p-0" style="min-width: 340px">
        <div class="list-group list-group-flush">
            {% for n in items %}
                <a href="{{ path('app_notifications') }}" class="list-group-item list-group-item-action">
                    <small class="text-muted float-end">{{ n.createdAt|date('Y-m-d H:i') }}</small>
                    <div class="fw-bold {{ n.isRead ? '' : 'text-primary' }}">{{ n.title }}</div>
                    {% if n.message %}<div class="small text-muted">{{ n.message|striptags|u.truncate(120, '‚Ä¶') }}</div>{% endif %}
                </a>
            {% else %}
                <div class="p-3 text-center text-muted">Brak powiadomie≈Ñ.</div>
            {% endfor %}
        </div>
        <div class="p-2 text-end border-top">
            <a href="{{ path('app_notifications') }}" class="btn btn-sm btn-link">Poka≈º wszystkie</a>
            <form class="d-inline" method="post" action="{{ path('app_notification_read_all') }}">
                <button class="btn btn-sm btn-outline-secondary">Oznacz jako przeczytane</button>
            </form>
        </div>
    </div>
</div>

