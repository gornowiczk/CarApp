{% extends 'base.html.twig' %}
{% block title %}Historia rezerwacji{% endblock %}

{% block body %}
    <style>
        .cardx{border:none;border-radius:18px;box-shadow:0 10px 28px rgba(15,23,42,.08)}
        .muted{color:#64748b}
        .badge-soft{border-radius:999px;padding:.35rem .6rem;font-weight:600;font-size:.8rem}
        .soft-done{background:#e9fbe7;color:#15803d}
        .soft-cancel{background:#f1f5f9;color:#475569}
    </style>

    <div class="container my-4">
        <div class="card cardx">
            <div class="card-body">
                <h4 class="mb-3">ðŸ“œ Historia rezerwacji</h4>

                {% if reservations is empty %}
                    <div class="alert alert-info mb-0">Brak historii.</div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                            <tr>
                                <th>Auto</th>
                                <th>Od</th>
                                <th>Do</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for r in reservations %}
                                <tr>
                                    <td class="fw-semibold">{{ r.car.brand }} {{ r.car.model }}</td>
                                    <td class="muted">{{ r.startDate|date('Y-m-d H:i') }}</td>
                                    <td class="muted">{{ r.endDate|date('Y-m-d H:i') }}</td>
                                    <td>
                                        {% if r.status == 'completed' %}
                                            <span class="badge-soft soft-done">ZakoÅ„czona</span>
                                        {% else %}
                                            <span class="badge-soft soft-cancel">Anulowana</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
