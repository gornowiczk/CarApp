{# Formularz dodawania opinii (wstawiany na stronie auta) #}
<div class="card p-3 mt-3">
    <h5 class="mb-3">Dodaj opinię</h5>
    {{ form_start(form, { action: path('app_review_add', {'id': car.id}) }) }}
    <div class="row g-3">
        <div class="col-md-3">{{ form_row(form.rating) }}</div>
        <div class="col-md-9">{{ form_row(form.content) }}</div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary">Wyślij opinię</button>
    </div>
    {{ form_end(form) }}
</div>
