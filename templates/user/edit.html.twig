{% extends 'base.html.twig' %}

{% block title %}Edycja profilu{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Edycja profilu</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.fullName, 'Imię i nazwisko', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fullName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.address, 'Adres', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.address) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.phoneNumber, 'Numer telefonu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phoneNumber) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.peselOrNip, 'PESEL/NIP', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.peselOrNip, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.peselOrNip) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.plainPassword, 'Nowe hasło (opcjonalnie)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.plainPassword) }}
        </div>

        <button type="submit" class="btn btn-success">Zapisz zmiany</button>
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-secondary">Powrót</a>

        {{ form_end(form) }}
    </div>
{% endblock %}
